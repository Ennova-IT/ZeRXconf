<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="it.ennova.rxadvertise.MainActivity">


    <EditText
        android:id="@+id/txtServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/service_name_hint" />

    <LinearLayout
        android:id="@+id/serviceDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtServiceName"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/txtServiceType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="@string/service_type_hint" />

        <EditText
            android:id="@+id/txtServicePort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="number"
            android:hint="@string/service_port_hint" />

    </LinearLayout>

    <Switch
        android:id="@+id/switchNativeApi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serviceDetailsLayout"
        android:text="Force native Android API" />

    <Switch
        android:id="@+id/switchEmptyAttributeSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchNativeApi"
        android:text="Empty attribute set" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchEmptyAttributeSet">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status" />

        <ImageView
            android:id="@+id/imgAdvertiseStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_remove_circle_red_500_18dp" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/advertisingViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnAdvertiseService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:text="Start" />
    </ViewFlipper>

</RelativeLayout>
